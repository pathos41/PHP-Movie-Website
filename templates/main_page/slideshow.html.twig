<div class="slideshow-container">
  {% for id, movie in all_movies %}
    <!-- Full-width images with number and caption text -->
    <div class="mySlides fadeAnimation">
      <img id="slideShow" src="{{ movie.banner_url }}">
      <div class="position-absolute left-text">
        <h2 class="text-white movie-name banner-text">{{ movie.name }}</h2>
        <p class="text-light mb-4 movie-desc">
          <span class="mr-2">
            {% set genres = movie.genre|split(",") %}
            {# {% set temp = [] %} #}
            {% for ge in genres %}
              <!-- Array index starts at 0 while database id starts at 1 -->
              <span class="mr-1">{{ categories[ge] }}</span>
              {# {% set temp = temp|merge([categories[ge - 1]]) %} #}
            {% endfor %}
          </span>
          <span>| Duration: {{ movie.duration }}</span>
        </p>
        <button class="btn color-theme">
          <a class="text-white" href="/movie/movie/get/{{ movie.id }}">VIEW INFO</a>
        </button>
      </div>
      <div class="position-absolute right-text p-2 rounded score-box">
          <p class="text-white movie-desc">Rating: {{ movie.average_score | number_format(1)}} / 5</p>
          <small class="text-white movie-desc">based on {{ movie.score_num }} reviews</small>
      </div>
      <div class="text">{{ id + 1 }} / {{ num }}</div>
    </div>
  {% endfor %}
  <!-- Next and previous buttons -->
{#       <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a> #}
</div>
<br>